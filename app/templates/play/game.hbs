{{#paper-card as  |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}{{model.question.text}}{{/text.headline}}
    {{/title.text}}
  {{/card.title}}
{{/paper-card}}
{{#each model.question.answers as |answer index|}}
  <div {{action "answer" model.question.id index }}>
  {{#paper-card as  |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}{{answer}}{{/text.headline}}
      {{/title.text}}
    {{/card.title}}
  {{/paper-card}}
  </div>
{{/each}}
