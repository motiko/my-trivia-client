{{#paper-content class="md-whiteframe-z1"}}

  {{paper-input
        textarea=true block=true maxlength=150
        label="Question Text"
        value=text
        onChange=(action (mut text))
        required=true
        errorMessages=(hash
          required="Question is required."
        )
  }}

 {{#paper-list}}
    {{#paper-radio-group
      groupValue=(readonly correct_answer_index)
      onChange=(action (mut correct_answer_index)) as |group|}}
    {{#each answers key="correct" as |answer i|}}
      {{#paper-item class="md-3-line"}}
        {{#group.radio value=i }}{{/group.radio}}
            {{paper-input
                  label="Answer Text"
                  value=answer.text
                  onChange=(action (mut answer.text))
                  required=true
                  errorMessages=(hash required="Answer is required.")
            }}
      {{/paper-item}}
    {{/each}}
    {{/paper-radio-group}}
  {{/paper-list}}

  <button {{action "save"}} class="pure-button pure-primary">
    Save
  </button>
  <button {{action "cancel"}} class="pure-button pure-primary">
    Cancel
  </button>

{{/paper-content}}
